<html>
    <head>
        <title>{title}</title>
        <script data-main="chatPage" src="require.js"></script>
    </head>
    <body>
        <div id="pageContainer">
            <div class="title">{title}</div>
            <div style="width: 500px; height: 300px; margin: 0 0 20px 0; border: solid 1px #999; overflow-y: scroll;" id="chatDisplay">
            </div>
            <form>
                <input type="text" name="chatLine" id="chatField" />
                <input type="submit" value="Send" id="sendButton" />
            </form>
        </div>
    </body>
</html>